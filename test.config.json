{
  "browserName": "chrome",
  "headless": true,
  "timeout": 90000,
  "viewport": {
    "width": 1280,
    "height": 1024
  },
  "video": "retain-on-failure",
  "screenshot": "only-on-failure",
  "trace": "retain-on-failure",
  "consoleLogValidation": true,
  "multiContext": false,
  "apps": [
    {
      "appName": "events-host",
      "appURL": "http://localhost:3000/",
      "browserName": "chrome",
      "skipConsoleErrors": []
    },
    {
      "appName": "events-cohost1",
      "appURL": "EVENTS_CO_HOST_APP_URL",
      "browserName": "chrome",
      "skipConsoleErrors": []
    },
    {
      "appName": "events-cohost2",
      "appURL": "EVENTS_CO_HOST_APP_URL",
      "browserName": "chrome",
      "skipConsoleErrors": []
    },
    {
      "appName": "events-viewer1",
      "appURL": "EVENTS_VIEWER_APP_URL",
      "browserName": "chrome",
      "skipConsoleErrors": []
    },
    {
      "appName": "events-viewer2",
      "appURL": "EVENTS_VIEWER_APP_URL",
      "browserName": "chrome",
      "skipConsoleErrors": []
    }
  ],
  "launchOptions": {
    "chromium": {
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--use-fake-device-for-media-stream",
        "--use-fake-ui-for-media-stream"
      ]
    },
    "chrome": {
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--use-fake-device-for-media-stream",
        "--use-fake-ui-for-media-stream"
      ]
    },
    "edge": {
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--use-fake-device-for-media-stream",
        "--use-fake-ui-for-media-stream"
      ]
    },
    "firefox": {
      "args": ["--quiet", "--use-test-media-devices"],
      "firefoxUserPrefs": {
        "media.navigator.streams.fake": true,
        "media.navigator.permission.disabled": true
      }
    }
  },
  "selectorPath": "./e2e-tests/locators",
  "logLevel": "error",
  "artifactsPath": "./e2e-tests/test-reports/artifacts",
  "reportPath": "./e2e-tests/test-reports"
}
