{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "types": ["@types/jest"],
    "typeRoots": [],
    "skipLibCheck": false,
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["**/testcafe/**/*", "**/node_modules/**/*"]
}
